<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stylefeng.guns.modular.miao.mapper.MiaoPostMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.stylefeng.guns.modular.miao.entity.MiaoPost">
        <id column="post_id" property="postId" />
        <result column="title" property="title" />
        <result column="topic_id" property="topicId" />
        <result column="user_id" property="userId" />
        <result column="file" property="file" />
        <result column="city" property="city" />
        <result column="location" property="location" />
        <result column="like_count" property="likeCount" />
        <result column="hot_count" property="hotCount" />
        <result column="comment_count" property="commentCount" />
        <result column="seq" property="seq" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        post_id AS "postId", title AS "title", topic_id AS "topicId", user_id AS "userId", file AS "file", city AS "city", location AS "location", like_count AS "likeCount", hot_count AS "hotCount", comment_count AS "commentCount", seq AS "seq", create_time AS "createTime"
    </sql>


    <select id="customList" resultType="cn.stylefeng.guns.modular.miao.model.result.MiaoPostResult" parameterType="cn.stylefeng.guns.modular.miao.model.params.MiaoPostParam">
        select
        <include refid="Base_Column_List"/>
        from miao_post where 1 = 1
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.stylefeng.guns.modular.miao.model.params.MiaoPostParam">
        select
        <include refid="Base_Column_List"/>
        from miao_post where 1 = 1
    </select>

    <select id="customPageList" resultType="cn.stylefeng.guns.modular.miao.model.result.MiaoPostResult" parameterType="cn.stylefeng.guns.modular.miao.model.params.MiaoPostParam">
        select
        <include refid="Base_Column_List"/>
        from miao_post where 1 = 1
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.stylefeng.guns.modular.miao.model.params.MiaoPostParam">
        select
        <include refid="Base_Column_List"/>
        from miao_post where 1 = 1
    </select>

</mapper>
